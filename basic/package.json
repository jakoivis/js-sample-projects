  "devDependencies": {
    "brfs": "^1.4.3",
    "browserify": "^13.0.1",
    "browserify-istanbul": "^2.0.0",
    "chai": "^3.5.0",
    "http-server": "^0.9.0",
    "istanbul": "^0.4.3",
    "karma": "^0.13.22",
    "karma-browserify": "^5.0.5",
    "karma-chrome-launcher": "^1.0.1",
    "karma-coverage": "^1.0.0",
    "karma-firefox-launcher": "^1.0.0",
    "karma-mocha": "^1.0.1",
    "karma-phantomjs-launcher": "^1.0.0",
    "live-reload": "^1.1.0",
    "mocha": "^2.5.3",
    "npm-build-tools": "^2.2.5",
    "parallelshell": "^2.0.0",
    "phantomjs-prebuilt": "^2.1.7",
    "stylus": "^0.54.5",
    "uglifyify": "3.0",
    "watch": "^0.18.0",
    "watchify": "^3.7.0"
  },
  "browser": {},
  "scripts": {
    "clean": "n-clean dist && n-clean coverage",
    "postclean": "mkdir dist",
    "copy:html": "n-copy --source src --destination dist \"**/*.html\"",
    "copy:font": "n-copy --source styles --destination dist \"*.otf\"",
    "copy:assets": "n-copy --source assets --destination dist/assets \"**/*\"",
    "build:css": "stylus styles/main.styl --out dist --compress",
    "build:js": "browserify --debug src/index.js > dist/index.js",
    "build:jsrelease": "browserify -g uglifyify src/index.js > dist/index.js",
    "prebuild": "npm run clean && npm run test",
    "build": "npm run copy:html && npm run copy:font && npm run copy:assets && npm run build:css && npm run build:jsrelease",
    "watch:css": "watch \"npm run build:css\" styles",
    "watch:js": "watch \"npm run build:js\" src",
    "watch:html": "watch \"npm run copy:html\" src",
    "live-reload": "live-reload --port 8081 dist",
    "server": "http-server -p 8080 dist",
    "watch": "parallelshell \"npm run live-reload -s\" \"npm run server -s\" \"npm run watch:css -s\" \"npm run watch:js -s\" \"npm run watch:html -s\" \"karma start karma.conf.js\"",
    "test": "karma start karma.conf.js --singleRun"
  }
}
